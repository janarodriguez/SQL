#This analysis uses the following Famous People dataset:

CREATE TABLE FamousPeople (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    occupation TEXT,
    birth_date DATE,
    nationality TEXT
);

INSERT INTO FamousPeople (name, occupation, birth_date, nationality)
